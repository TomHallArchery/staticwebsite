{# generic page template.

  Parameters:
    title
    description
    keywords
    content: html string of page content
#}

{% extends "base/base.html.j2" %}

{% block content -%}
<!-- Page_Content from page.html.j2 tempalate, flatpage object -->
<main class="{{ m.layout(layout, 'main') }}" id="page_body">

  <section>
  {% block page_heading -%}
    <h1>{{ title | title }}</h1>
  {%- endblock %}

  {% block page_content -%}
    {{ content | responsive_images }}
  {%- endblock %}
  </section>

  {% block extra_content -%}
    {# for extra content not controlled by flatpage #}
  {%- endblock %}


</main>
<!-- End page_content -->

<aside class="{{ m.layout(layout, 'aside') }}" id="page_sidebar">

  {% block side_content -%}
    {{ side.html }}
  {%- endblock %}

</aside>

{%- endblock %}
