{% extends "base/base.html.j2" %}

{% block head_styles %}
  {{ m.link_style('css/styles.css')}}
{% endblock %}

{% block content %}
<main id="page_body">

  <section>
    
  {% block page_heading -%}
  <h1>{{ title | title }}</h1>
  {%- endblock %}

  <p>Hey there, if you want to get in touch you can just send me a message on this form!</p>

{% block extra_content -%}
  <form class="contact-form" id="contact-form" name="contact" action="" method="post" netlify netlify-honeypot="title">

      <label for="name">Your Name:</label>
      <input type="text" id="name" name="name" value="" required>

      <label for="title" hidden>Your Title:
      <input type="text" id=title name="title" value="">
      </label>

      <label for="email">Your Email:</label>
      <input type="email" id=email name="email" value="">

      <label for="message">Message:</label>
      <textarea name="message" id="message" rows="8" required></textarea>

      <label for="submit"></label>
      <button type="submit" name="submit" value="">Send Message</button>

  </form>
{%- endblock %}

  </section>
</main>

{% block side_content %}
{% endblock %}

{%- endblock content %}
